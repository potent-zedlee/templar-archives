{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      "**/cloud-run/**",
      "**/functions/**",
      "**/e2e/**",
      "**/scripts/**",
      "**/.git/**",
      "**/.vercel/**"
    ],
    "frameworksBackend": {
      "region": "asia-northeast3",
      "memory": "1GiB",
      "maxInstances": 100
    }
  }
}
